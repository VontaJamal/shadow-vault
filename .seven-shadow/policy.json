{
  "version": 2,
  "enforcement": "block",
  "blockBotAuthors": true,
  "blockedAuthors": [
    "copilot-pull-request-reviewer[bot]"
  ],
  "allowedAuthors": [],
  "scanPrBody": true,
  "scanReviewBody": true,
  "scanCommentBody": true,
  "maxAiScore": 0.65,
  "disclosureTag": "[AI-ASSISTED]",
  "disclosureRequiredScore": 0.45,
  "runtime": {
    "failOnUnsupportedEvent": true,
    "failOnMalformedPayload": true,
    "maxBodyChars": 12000,
    "maxTargets": 25,
    "maxEventBytes": 1000000
  },
  "report": {
    "includeBodies": false,
    "redactionMode": "hash"
  },
  "approvals": {
    "minHumanApprovals": 1,
    "fetchTimeoutMs": 10000,
    "maxPages": 10,
    "retry": {
      "enabled": true,
      "maxAttempts": 3,
      "baseDelayMs": 250,
      "maxDelayMs": 2500,
      "jitterRatio": 0.2,
      "retryableStatusCodes": [
        429,
        500,
        502,
        503,
        504
      ]
    }
  },
  "rules": [
    {
      "name": "explicit-ai-disclaimer",
      "pattern": "\\bas an ai language model\\b",
      "action": "block"
    },
    {
      "name": "cannot-run-code-disclaimer",
      "pattern": "\\bi can(?:not|'t) (?:run|execute) (?:code|commands)\\b",
      "action": "block"
    },
    {
      "name": "generic-template-overall",
      "pattern": "\\boverall\\b",
      "action": "score",
      "weight": 0.18
    },
    {
      "name": "generic-template-nit",
      "pattern": "\\bnit:?\\b",
      "action": "score",
      "weight": 0.15
    },
    {
      "name": "generic-template-great-work",
      "pattern": "\\bgreat work\\b",
      "action": "score",
      "weight": 0.2
    },
    {
      "name": "generic-template-consider-tests",
      "pattern": "\\bconsider adding tests\\b",
      "action": "score",
      "weight": 0.22
    }
  ]
}
